{
  "name": "cline/basket",
  "description": "Shopping cart and order management with tax calculation, discounts, coupons, and multi-format transformation.",
  "license": "MIT",
  "keywords": [
    "php",
    "basket",
    "cart",
    "shopping-cart",
    "ecommerce",
    "tax",
    "discount",
    "coupon",
    "money"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "ext-intl": "*",
    "moneyphp/money": "^4.6.0",
    "nesbot/carbon": "^2.72.5",
    "symfony/serializer": "^7.2.0",
    "symfony/yaml": "^7.2.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.49@dev",
    "orchestra/testbench": "^10.6",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0",
    "symfony/var-dumper": "^7.3.4",
    "cline/coding-standard": "^1.5.7"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Basket\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=80 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=80 --coverage"
  }
}
